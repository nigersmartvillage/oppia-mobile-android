<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ap="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_filter_points"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:tabGravity="center"
        app:tabTextColor="@color/text_grey"
        app:tabSelectedTextColor="@color/ap_white"
        app:tabBackground="@drawable/bg_tab_text"
        app:tabTextAppearance="@style/TabLayoutAppearance"
        app:tabIndicatorHeight="0dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_last_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_year" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_last_month"
            style="@style/TabText"
            android:text="@string/last_month"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab_last_week"
            style="@style/TabText"
            android:text="@string/last_week"/>

    </android.support.design.widget.TabLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_total_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:text="@string/points"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/points_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider_light"
        android:dividerHeight="1dp"
        android:padding="10dp"/>

</LinearLayout>